@{
}

@model List<CRUD_operations.Models.Entities.Student>


<h1>Student List</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col"> </th>
        </tr>
    </thead>
    <tbody>
      @foreach(var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">  Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
